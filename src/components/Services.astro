---
import CardPrice from "../components/UI/CardPrice.astro";
import storeCommerce from "@/assets/img/ecommerce.png";
import web from "@/assets/img/web.png";
import social from "@/assets/img/social.png";
---

<h2 class="text-3xl font-bold text-center text-gray-800" id="services">
  Nuestros servicios
</h2>
<div
  class="flex flex-col md:flex-row items-center gap-6 mx-12 my-3 justify-center md:mx-24"
>
  <div
    class="flex flex-col md:flex-row items-center gap-10 mx-36 my-2 justify-center"
  >
    <CardPrice
      service="E-commerce"
      description="Tiendas en linea para tu negocio"
      price="10,000"
      urlImg={storeCommerce}
      alt="e-commerce"
    />
    <CardPrice
      service="Sitios Web"
      description="Tu propia pagina web"
      price="2,000"
      urlImg={web}
      alt="website"
    />
    <CardPrice
      service="Redes sociales"
      description="Manejamos tus redes sociales"
      price="1,200"
      urlImg={social}
      alt="social"
    />
  </div>
</div>
