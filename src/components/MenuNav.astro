<script>
  // Burger menus
  document.addEventListener("DOMContentLoaded", function () {
    const burger = document.querySelectorAll(".navbar-burger");
    const menu = document.querySelectorAll(".navbar-menu");
    const close = document.querySelectorAll(".navbar-close");
    const backdrop = document.querySelectorAll(".navbar-backdrop");
    const links = document.querySelectorAll(".mobile-link"); // üëà enlaces del men√∫ m√≥vil

    function toggleMenu() {
      menu.forEach((m) => m.classList.toggle("hidden"));
    }

    burger.forEach((b) => b.addEventListener("click", toggleMenu));
    close.forEach((c) => c.addEventListener("click", toggleMenu));
    backdrop.forEach((b) => b.addEventListener("click", toggleMenu));

    // üëâ cerrar men√∫ al hacer clic en un enlace
    links.forEach((link) => link.addEventListener("click", toggleMenu));
  });
</script>
