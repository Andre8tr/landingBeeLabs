---
import Image from "astro/components/Image.astro";
import beeLogo from "../assets/img/logo/LogoRounded.png";
---

<nav
  class="bg-gray-900 fixed w-full z-20 top-0 start-0 border-b border-gray-600"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Image src={beeLogo} alt={"Bee Logo"} width={50} />
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap text-white"
        >BeeLabs üêù</span
      >
    </a>

    <div
      class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse hidden"
    >
      <button
        type="button"
        class="text-white hidden bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-800 font-medium rounded-lg text-sm px-4 py-2 text-center"
        >Get started</button
      >
      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-400 rounded-lg md:hidden hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-600"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>

    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-sticky"
    >
      <ul
        class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-700 rounded-lg bg-gray-800 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-gray-900"
      >
        <li>
          <a
            href="/"
            class="block py-2 px-3 text-white bg-blue-600 rounded-sm md:bg-transparent md:text-blue-500 md:p-0"
            aria-current="page">Inicio</a
          >
        </li>
        <li>
          <a
            href="/#about"
            class="block py-2 px-3 text-white rounded-sm hover:bg-gray-700 md:hover:bg-transparent md:hover:text-blue-500 md:p-0"
            >Acerca De</a
          >
        </li>
        <li>
          <a
            href="/#services"
            class="block py-2 px-3 text-white rounded-sm hover:bg-gray-700 md:hover:bg-transparent md:hover:text-blue-500 md:p-0"
            >Servicios</a
          >
        </li>
        <li>
          <a
            href="/#contacto"
            class="block py-2 px-3 text-white rounded-sm hover:bg-gray-700 md:hover:bg-transparent md:hover:text-blue-500 md:p-0"
            >Contacto</a
          >
        </li>
        <li>
          <a
            href="/blog"
            class="block py-2 px-3 text-white rounded-sm hover:bg-gray-700 md:hover:bg-transparent md:hover:text-blue-500 md:p-0"
            >Blog</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
