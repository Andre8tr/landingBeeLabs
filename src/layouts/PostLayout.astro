---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title?: string;
  date?: Date;
  author?: string;
  tags?: string[];
  image?: string;
}

const {
  title = "Sin t√≠tulo",
  date = new Date(),
  author,
  tags = [],
  image,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon2.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Bee Labs</title>
  </head>
  <body class="bg-gray-50 text-gray-900 antialiased">
    <NavBar />

    <!-- Hero con imagen solo si existe -->
    {
      image ? (
        <section class="relative h-64 md:h-80 w-full overflow-hidden">
          <img
            src={image}
            alt={title}
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/40 to-transparent flex items-end">
            <div class="max-w-4xl mx-auto px-6 pb-10">
              <h1 class="text-4xl md:text-5xl font-bold text-white drop-shadow-lg">
                {title}
              </h1>
            </div>
          </div>
        </section>
      ) : (
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-center text-gray-800 mt-12">
          {title}
        </h1>
      )
    }

    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Meta info -->
      <div
        class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 text-gray-600 text-sm"
      >
        <p class="mb-3 md:mb-0">
          üìÖ {
            date.toLocaleDateString("es-ES", {
              day: "2-digit",
              month: "long",
              year: "numeric",
            })
          }
          {author && ` ‚Ä¢ ‚úçÔ∏è ${author}`}
        </p>

        {
          tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {tags.map((tag) => (
                <span
                  class="px-4 py-1 rounded-full bg-white text-gray-800 text-xs font-semibold
                       shadow-sm hover:shadow-md transition duration-300"
                >
                  #{tag}
                </span>
              ))}
            </div>
          )
        }
      </div>

      <!-- Contenido del post -->
      <article
        class="prose prose-lg prose-gray max-w-none
               prose-headings:font-bold prose-a:text-blue-600
               prose-a:no-underline hover:prose-a:underline
               prose-img:rounded-xl"
      >
        <slot />
      </article>

      <!-- Bot√≥n volver -->
      <div class="mt-16 text-center">
        <a
          href="/blog"
          class="inline-block px-8 py-3 rounded-full bg-gray-800 text-white
                 shadow hover:bg-gray-900 hover:shadow-lg
                 transition duration-300"
        >
          ‚Üê Volver al blog
        </a>
      </div>
    </main>

    <Footer />
  </body>
</html>
